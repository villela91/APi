    "paths": {
      "/": {
        "get": {
          "summary": "listar todos os usuarios cadastrados",
          "description": "rota responsavel por listar todos os suarios cadastrados",
          "tags": ["Users"],
          "responses": {
            "404": {
              "description": "Not Found ;("
            },
            "200": {
              "description": "OK ;D",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Users"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Users": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "image": {
              "type": "string"
            },
            "characters":{
              "type": "string"
            }
          }
        }
      }
    }
  }
  